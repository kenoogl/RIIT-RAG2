# 玄界RAGシステム 環境変数設定例
# このファイルを .env にコピーして使用してください

# アプリケーション設定
GENKAI_PORT=8000
GENKAI_HOST=0.0.0.0
GENKAI_LOG_LEVEL=INFO
GENKAI_CONFIG_PATH=./config/production.yaml

# Ollama設定
GENKAI_OLLAMA_URL=http://localhost:11434
OLLAMA_PORT=11434

# データベース設定
GENKAI_DATA_DIR=./data
GENKAI_CHROMA_PERSIST_DIR=./data/chroma_db

# ログ設定
GENKAI_LOG_DIR=./logs
GENKAI_LOG_FILE=./logs/genkai_rag.log
GENKAI_MAX_LOG_SIZE_MB=100

# セキュリティ設定
GENKAI_SECRET_KEY=your-secret-key-here
GENKAI_CORS_ORIGINS=*

# パフォーマンス設定
GENKAI_MAX_CONCURRENT_REQUESTS=10
GENKAI_CHUNK_SIZE=1024
GENKAI_MAX_DOCUMENTS=10000

# 会話履歴設定
GENKAI_MAX_HISTORY_SIZE=50
GENKAI_SESSION_TIMEOUT_HOURS=24

# 監視設定
GENKAI_MONITORING_ENABLED=true
GENKAI_HEALTH_CHECK_INTERVAL=30

# バックアップ設定
GENKAI_BACKUP_DIR=./backups
GENKAI_RETENTION_DAYS=30
GENKAI_AUTO_BACKUP=true

# 開発設定（本番環境では無効にする）
GENKAI_DEBUG=false
GENKAI_RELOAD=false